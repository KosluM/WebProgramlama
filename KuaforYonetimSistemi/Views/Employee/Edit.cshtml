@model KuaforYonetimSistemi.Models.Employee

<h2>Çalışan Düzenle</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Adı</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label">Soyadı</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Specialty" class="control-label">Uzmanlık</label>
        <input asp-for="Specialty" class="form-control" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AvailabilityStart" class="control-label">Başlangıç Saati</label>
        <input asp-for="AvailabilityStart" class="form-control" />
        <span asp-validation-for="AvailabilityStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AvailabilityEnd" class="control-label">Bitiş Saati</label>
        <input asp-for="AvailabilityEnd" class="form-control" />
        <span asp-validation-for="AvailabilityEnd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable" class="control-label">Uygunluk</label>
        <select asp-for="IsAvailable" class="form-control">
            <option value="true">Uygun</option>
            <option value="false">Meşgul</option>
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">İptal</a>
    </div>
</form>
