@model IEnumerable<WebProgramlama.Models.Employee>

@{
    ViewData["Title"] = "Çalışan Listesi";
}

<h2>Çalışan Listesi</h2>
<a asp-action="Create" class="btn btn-primary">Yeni Çalışan Ekle</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Uzmanlık</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Specialties</td>
                <td>@employee.AvailableHours</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <form asp-action="Delete" asp-route-id="@employee.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
