@model IEnumerable<KuaforYonetimSistemi.Models.Salon>

<h2>Salon Yönetimi</h2>

<a href="/Salon/Create" class="btn btn-primary">Yeni Salon Ekle</a>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Adres</th>
            <th>İletişim</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salon in Model)
        {
            <tr>
                <td>@salon.Name</td>
                <td>@salon.Address</td>
                <td>@salon.ContactInfo</td>
                <td>@salon.OpeningHours - @salon.ClosingHours</td>
                <td>
                    <a href="/Salon/Edit/@salon.ID" class="btn btn-sm btn-warning">Düzenle</a>
                    <a href="/Salon/Delete/@salon.ID" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
