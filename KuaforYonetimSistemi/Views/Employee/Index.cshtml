@model IEnumerable<KuaforYonetimSistemi.Models.Employee>

<h1>Çalışan Listesi</h1>

<!-- Admin Yetkisiyle "Çalışan Ekle" Butonu -->
@if (User.IsInRole("Admin"))
{
    <a class="btn btn-primary" href="@Url.Action("Create", "Employee")">Çalışan Ekle</a>
}

<!-- Çalışanları Listeleme -->
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Uzmanlık</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Specialty</td>
                <td>@(employee.IsAvailable ? "Uygun" : "Uygun Değil")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
