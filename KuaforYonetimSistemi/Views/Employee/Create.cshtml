@model KuaforYonetimSistemi.Models.Employee

<h2>Yeni Çalışan Ekle</h2>
<form method="post">
    <div class="mb-3">
        <label>Çalışan Adı</label>
        <input type="text" name="Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Uzmanlık Alanı</label>
        <input type="text" name="Specialty" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Çalışma Başlangıç Saati</label>
        <input type="text" name="AvailabilityStart" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Çalışma Bitiş Saati</label>
        <input type="text" name="AvailabilityEnd" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Salon</label>
        <select name="SalonID" class="form-control">
            <option value="">Salon Seçin</option>
            @foreach (var salon in ViewBag.Salons)
            {
                <option value="@salon.ID">@salon.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
