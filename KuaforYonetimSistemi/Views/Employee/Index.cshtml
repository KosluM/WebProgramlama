@model IEnumerable<KuaforYonetimSistemi.Models.Employee>

<h2>Çalışan Listesi</h2>
<table class="table">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Uzmanlık</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Specialty</td>
                <td>@(item.IsAvailable ? "Uygun" : "Meşgul")</td>
                <td>
                    <a href="@Url.Action("Edit", "Employee", new { id = item.Id })" class="btn btn-primary">Düzenle</a>
                    <a href="@Url.Action("Delete", "Employee", new { id = item.Id })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
