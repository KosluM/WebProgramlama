@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mb-4">📊 Dashboard - Kuaför Yönetim Sistemi</h1>

<!-- İstatistik Kartları -->
<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Toplam Kullanıcı</h5>
                <p class="card-text display-4">150</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Günlük Randevu</h5>
                <p class="card-text display-4">25</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Toplam Gelir</h5>
                <p class="card-text display-4">₺15,000</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Aktif Çalışan</h5>
                <p class="card-text display-4">10</p>
            </div>
        </div>
    </div>
</div>

<!-- Grafikler -->
<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">📈 Aylık Gelir Grafiği</div>
            <div class="card-body">
                <canvas id="monthlyRevenueChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">📅 Günlük Randevu Grafiği</div>
            <div class="card-body">
                <canvas id="dailyAppointmentsChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Son Randevular Tablosu -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">🗓️ Son Randevular</div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Müşteri Adı</th>
                            <th>Tarih</th>
                            <th>Hizmet</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Ali Yılmaz</td>
                            <td>2024-06-15</td>
                            <td>Saç Kesimi</td>
                            <td><span class="badge bg-success">Tamamlandı</span></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Ayşe Kaya</td>
                            <td>2024-06-15</td>
                            <td>Saç Boyama</td>
                            <td><span class="badge bg-warning">Beklemede</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Grafikler için Script -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Aylık Gelir Grafiği
    var ctx1 = document.getElementById('monthlyRevenueChart').getContext('2d');
    var monthlyRevenueChart = new Chart(ctx1, {
        type: 'line',
        data: {
            labels: ['Ocak', 'Şubat', 'Mart', 'Nisan', 'Mayıs', 'Haziran'],
            datasets: [{
                label: 'Aylık Gelir',
                data: [1000, 2000, 3000, 4000, 5000, 6000],
                borderColor: 'blue',
                fill: false
            }]
        }
    });

    // Günlük Randevu Grafiği
    var ctx2 = document.getElementById('dailyAppointmentsChart').getContext('2d');
    var dailyAppointmentsChart = new Chart(ctx2, {
        type: 'bar',
        data: {
            labels: ['Pazartesi', 'Salı', 'Çarşamba', 'Perşembe', 'Cuma'],
            datasets: [{
                label: 'Günlük Randevu',
                data: [5, 10, 15, 20, 25],
                backgroundColor: 'green'
            }]
        }
    });
</script>
