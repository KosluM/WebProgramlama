@model KuaforYonetimSistemi.Models.Appointment

<h2>Yeni Randevu Oluştur</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Tarih</label>
        <input type="datetime-local" asp-for="AppointmentDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Hizmet</label>
        <input type="text" asp-for="Service" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Notlar</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Randevu Oluştur</button>
</form>
