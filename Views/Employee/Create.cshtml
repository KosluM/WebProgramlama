@model WebProgramlama.Models.Employee

@{
    ViewData["Title"] = "Yeni Çalışan Ekle";
}

<h2>Yeni Çalışan Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Specialties"></label>
        <input asp-for="Specialties" class="form-control" />
        <span asp-validation-for="Specialties" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AvailableHours"></label>
        <input asp-for="AvailableHours" class="form-control" />
        <span asp-validation-for="AvailableHours" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Geri Dön</a>
</form>
