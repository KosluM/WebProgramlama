@model IEnumerable<KuaforYonetimSistemi.Models.User>

<h1>Kullanıcı Yönetimi</h1>

<a asp-action="Create" class="btn btn-success mb-3">➕ Yeni Kullanıcı Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @if (user.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Pasif</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">✏️ Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">🗑️ Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
