@model WebProgramlama.Models.Employee

@{
    ViewData["Title"] = "Çalışan Bilgilerini Güncelle";
}

<h2>Çalışan Bilgilerini Güncelle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Specialties"></label>
        <input asp-for="Specialties" class="form-control" />
        <span asp-validation-for="Specialties" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AvailableHours"></label>
        <input asp-for="AvailableHours" class="form-control" />
        <span asp-validation-for="AvailableHours" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">İptal</a>
</form>
