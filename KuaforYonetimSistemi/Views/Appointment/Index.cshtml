@model IEnumerable<KuaforYonetimSistemi.Models.Appointment>

<h2>Randevularım</h2>
<table class="table">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Hizmet</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.AppointmentDate.ToShortDateString()</td>
                <td>@appointment.Service</td>
                <td>@appointment.Status</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Yeni Randevu Oluştur</a>
