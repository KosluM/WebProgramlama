@model KuaforYonetimSistemi.Models.Employee

<h2>Çalışan Ekle</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Adı</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyadı</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Uzmanlık</label>
        <input asp-for="Specialty" class="form-control" />
    </div>
    <div class="form-group">
        <label>Durum</label>
        <select asp-for="IsAvailable" class="form-control">
            <option value="true">Uygun</option>
            <option value="false">Uygun Değil</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success mt-3">Kaydet</button>
</form>
