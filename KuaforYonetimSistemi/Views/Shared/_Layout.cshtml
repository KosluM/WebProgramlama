<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Kuaför Yönetim Sistemi</title>

    <!-- CSS Dosyaları -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
</head>
<body id="page-top">

    <div id="wrapper">
        <!-- Sidebar -->
<ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="#">
        <div class="sidebar-brand-icon">
            <i class="fas fa-cut"></i>
        </div>
        <div class="sidebar-brand-text mx-3">KUAFÖR YÖNETİM</div>
    </a>

    <hr class="sidebar-divider my-0">

    <!-- Admin Paneli -->
    <li class="nav-item">
        <a class="nav-link" asp-controller="Admin" asp-action="AdminDashboard">
            <i class="fas fa-tachometer-alt"></i>
            <span>Admin Paneli</span>
        </a>
    </li>

    <!-- Müşteri Paneli -->
    <li class="nav-item">
        <a class="nav-link" asp-controller="Customer" asp-action="CustomerDashboard">
            <i class="fas fa-users"></i>
            <span>Müşteri Paneli</span>
        </a>
    </li>

    <!-- Çalışanlar Menüsü, sadece Admin rolündekilere görünür -->
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "Employee")">
                <i class="fas fa-users"></i> Çalışanlar
            </a>
        </li>
    }

    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Logout">
            <i class="fas fa-sign-out-alt"></i>
            <span>Çıkış Yap</span>
        </a>
    </li>

    <hr class="sidebar-divider d-none d-md-block">
</ul>


        <!-- End of Sidebar -->

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <span class="navbar-brand">Kuaför Yönetim Sistemi</span>
                </nav>

                <!-- Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>© 2024 Kuaför Yönetim Sistemi</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- JS Dosyaları -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>
</body>
</html>
